        /**
         * Loads the raw string data from the URL stored on this save slot.
         * @param callback Function to call with the raw data string or null
         * @param thisArg Context to use when calling the callback
         */
        public function loadDataRaw(callback:Function = null, thisArg:* = null):void {
            
            // If this is an empty slot, skip the load and just return null data to the callback.
            if (this.url == null || this.url.length == 0) {
                if (callback != null) {
                    callback.call(thisArg, null, null);
                }
                return;
            }
			
            var self:* = this;
            var loader:URLLoader = new URLLoader();
            loader.dataFormat = URLLoaderDataFormat.TEXT;
            loader.addEventListener(Event.COMPLETE, function(e:Event):void {
                self.error = null;
                if (callback != null) {
                    callback.call(thisArg, loader.data as String, self.error);
                }
            });
            loader.addEventListener(IOErrorEvent.IO_ERROR, function(e:IOErrorEvent):void {
                if (callback != null) {
                    self.error = Errors.getError(Errors.INVALID_RESPONSE, "Failed to load SaveSlot data from URL: " + e.text, true);
                    callback.call(thisArg, null, self.error);
                }
            });

            // the original v3 API did not include the protocol in the URL, so we need to add it if it's missing to prevent load errors.
            // it's possible this will be updated on the server some day, so we should be prepared to handle both cases. If the URL already includes the protocol, this will have no effect.
            var loadUrl:String = this.url;
            if (loadUrl.indexOf("://") == -1) {
                loadUrl = "https:" + loadUrl;
            }
            loader.load(new URLRequest(loadUrl));
        }
		
