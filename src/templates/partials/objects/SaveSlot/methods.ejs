         * @param callback Function to call with the decoded object
         * @param thisArg Context to use when calling the callback
         */
        public function loadData(callback:Function = null, thisArg:* = null):void {
            var self:* = this;
            this.loadDataRaw(function(data:String, error:*):void {
                var decoded:* = null;
                if (data != null) {
                    try {
                        decoded = io.newgrounds.NGJSON.parse(data);
                    } catch (error:Error) {
                        self.error = Errors.getError(Errors.INVALID_RESPONSE, "Failed to decode SaveSlot data JSON: " + error.message, true);
                        decoded = null;
                    }
                }
                if (decoded != null) {
                    self.error = null;
                } else if (error != null) {
                    self.error = error;
                }
                if (callback != null) {
                    callback.call(thisArg, decoded, self.error);
                }
            }, this);
        }
		
